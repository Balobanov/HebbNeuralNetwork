void __fastcall TForm2::Button1Click(TObject *Sender)
{
	if(RadioButton1->Checked == true)
		{
			for (int i = 0; i < cont; i++)
				for (int j = 0; j < cont; j++)
				StringGrid1->Cells[j][i] = IntToStr(matrix_result1[j][i]);
        }
}
